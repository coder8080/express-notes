<%- include('blocks/head.ejs', {title: 'Изменить запись ' + note.heading}) %>
<div class="container center">
    <h2>Изменить запись "<%= note.heading %>"</h2>
</div>
<hr>
<div class="container">
    <form action="/change-note/<%= note.id %>" method="post">
        <div class="input-field">
            <!--Без этой штуки значение почему-то сбрасывается, как чинить по-другому я хз-->
            <input type="hidden">
            <input id='heading-input' type="text" value="<%= note.heading %>" name="heading" required>
            <label for="heading-input">Название</label>
        </div>
        <div class="input-field">
            <textarea class="materialize-textarea" id="text-input" name="text" required><%= note.text %></textarea>
            <label for="text-input">Текст</label>
        </div>
        <div class="row">
            <div class="col s12 m6">
                <input type="submit" value="Сохранить изменения" class="btn btn-outline-primary">
            </div>
            <div class="col s12 m6">
                <div class="hide-on-med-and-up"><br></div>
                <a href="/" class="btn waves-effect waves-dark">Отмена</a>
            </div>
        </div>
    </form>
</div>
<%- include('blocks/footer.ejs') %>
